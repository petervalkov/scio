@using Scio.Common
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@this.ViewData["Title"] - @GlobalConstants.SystemName</title>
    <environment names="Development">
        <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" asp-append-version="true">
        <link href="~/lib/admin-lte/css/adminlte.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/css/alertify.css" rel="stylesheet" asp-append-version="true" />
        <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    </environment>
    <environment names="Staging,Production">
    </environment>
</head>
<body class="layout-fixed layout-navbar-fixed sidebar-mini">
    <div class="wrapper">
        <partial name="_NavbarPartial.cshtml" />
        <partial name="_SidebarPartial" />
        <div class="content-wrapper">
            <partial name="_CookieConsentPartial" />

            @this.RenderBody()

        </div>
        <partial name="~/Views/Shared/_FooterPartial.cshtml" />
    </div>

    <environment names="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
        <script src="~/lib/admin-lte/js/adminlte.js"></script>
        <script src="~/js/alertify.js"></script>
        <script src="~/js/forum.js"></script>
        <script src="~/js/site.js"></script>
    </environment>
    <environment names="Staging,Production">
    </environment>
    @this.RenderSection("Scripts", required: false)
</body>
</html>
