@using Scio.Web.ViewModels.Forum.Posts
@model CreateQuestionViewModel

@{
    ViewData["Title"] = "Ask Question";
}

<article class="forum">
    <header>
        <h1>@Model.Title</h1>
    </header>
    <div class="forum-content">
        <form role="form" asp-area="Forum" asp-controller="Posts" asp-action="AskQuestion" method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label for="question-title">Title</label>
                <input asp-for="Title" type="text" id="question-title" name="title">
                <span asp-validation-for="Title"></span>
            </div>
            <div class="form-group">
                <label for="tinymce">Body</label>
                <textarea asp-for="Body" id="mytextarea" name="body"></textarea>
                <span asp-validation-for="Body"></span>
            </div>
            <div class="form-group">
                <label for="question-tags">Tags</label>
                <input type="text" id="question-tags" name="tags">
            </div>
            <div class="form-group">
                <button type="submit">Post Question</button>
            </div>
        </form>
    </div>
    <partial name="_SideContentPartial" />
</article>