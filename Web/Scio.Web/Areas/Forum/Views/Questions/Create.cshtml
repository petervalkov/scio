@{
    ViewData["Title"] = "Ask Question";
}

<section class="forum">
    <h1>Ask Question</h1>
    <div class="forum-content">
        <form role="form" asp-area="Forum" asp-controller="Questions" asp-action="Create" method="post">
            <div class="form-group">
                <label for="question-title">Title</label>
                <input type="text" id="question-title" name="title">
            </div>
            <div class="form-group">
                <label for="tinymce">Body</label>
                <textarea id="mytextarea" name="content"></textarea>
            </div>
            <div class="form-group">
                <label for="question-tags">Tags</label>
                <input type="text" id="question-tags" name="tags">
            </div>
            <div class="form-group">
                <button type="submit">Post Question</button>
            </div>
        </form>
    </div>
    <partial name="_SideContentPartial" />
</section>
