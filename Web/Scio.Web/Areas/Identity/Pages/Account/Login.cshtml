@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="user-forms-content">
    <div class="login-form">
        <h2>@ViewData["Title"]</h2>
        <form id="account" method="post">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <div class="form-group-input">
                    <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                    <i class="far fa-envelope"></i>
                </div>
                <span asp-validation-for="Input.Email"></span>
            </div>
            <div class="form-group">
                <div class="form-group-input">
                    <input type="password" asp-for="Input.Password" placeholder="Password" />
                    <i class="fas fa-lock"></i>
                </div>
                <span asp-validation-for="Input.Password"></span>
            </div>
            <div class="form-group-flex">
                <label asp-for="Input.RememberMe">
                    <input type="checkbox" asp-for="Input.RememberMe" />
                    Remember Me
                </label>
                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
            </div>
            <div class="form-group">
                <button type="submit">Login</button>
            </div>
            <div class="form-group">
                <p>Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register</a></p>
                <p><a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a></p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
