@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Reset password";
}

<div class="account-form-content">
    <div class="account-form">
        <h2>@ViewData["Title"]</h2>
        <form method="post">
            <div asp-validation-summary="ModelOnly"></div>
            <input asp-for="Input.Code" type="hidden" />
            <div class="form-group">
                <div class="form-group-input">
                    <input asp-for="Input.Email" placeholder="Email" />
                    <i class="far fa-envelope"></i>
                </div>
                <span asp-validation-for="Input.Email"></span>
            </div>
            <div class="form-group">
                <div class="form-group-input">
                    <input type="password" asp-for="Input.Password" placeholder="Password" />
                    <i class="fas fa-lock"></i>
                </div>
                <span asp-validation-for="Input.Password"></span>
            </div>
            <div class="form-group">
                <div class="form-group-input">
                    <input type="password" asp-for="Input.ConfirmPassword" placeholder="Confirm Password" />
                    <i class="fas fa-lock"></i>
                </div>
                <span asp-validation-for="Input.ConfirmPassword"></span>
            </div>
            <div class="form-group">
                <button type="submit">Reset</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
